<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace绑定一个对应的Dao/Mapper接口-->
<mapper namespace="com.dao.com.zhehao.UserMapper">
    <!--id为namespace中的方法名，resultType为查询结果对应的实体类-->
    <select id="getUserList" resultType="com.pojo.com.zhehao.User">
        select * from mybatis.`user`
    </select>

    <select id="getUserListById" parameterType="int" resultType="com.pojo.com.zhehao.User">
        select * from mybatis.`user` where `id` = #{id}
    </select>

    <!--使用对象作为参数，引用参数时使用对象的属性名-->
    <insert id="insertUser" parameterType="com.pojo.com.zhehao.User">
        insert into mybatis.`user`(`id`,`name`,`pwd`) values (#{id}, #{name}, #{pwd})
    </insert>

    <update id="updateUser" parameterType="com.pojo.com.zhehao.User">
        update mybatis.`user` set `name` = #{name}, `pwd` = #{pwd} where `id` = #{id}
    </update>

    <delete id="deleteUser" parameterType="int">
        delete from mybatis.`user` where `id` = #{id}
    </delete>

    <!--未必需要定义实体类，如果使用Map作为参数，引用参数时使用Map的键名-->
    <select id="getUserListByIdV2" parameterType="map" resultType="map">
        select * from mybatis.`user` where `id` = #{mapId}
    </select>

    <insert id="insertUserV2" parameterType="map">
        insert into mybatis.`user`(`id`,`name`,`pwd`) values (#{mapId}, #{mapName}, #{mapPwd})
    </insert>

    <select id="getUserByKeyword" resultType="com.pojo.com.zhehao.User">
        select * from mybatis.`user` where name like CONCAT('%', #{keyword}, '%')
    </select>
</mapper>