<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace绑定对应的Mapper接口-->
<mapper namespace="com.zhehao.dao.BookMapper">

    <resultMap id="bookResultMap" type="books">
        <result property="bookId" column="id"/>
        <result property="bookName" column="name"/>
        <result property="bookCount" column="count"/>
        <result property="detail" column="detail"/>
    </resultMap>

    <insert id="addBook" parameterType="books">
        insert into books (name, count, detail)
        values (#{bookName}, #{bookCount}, #{detail});
    </insert>

    <delete id="deleteBookById">
        delete from books where id = #{bookID}
    </delete>

    <update id="updateBook" parameterType="books">
        update books set name = #{bookName}, count = #{bookCount}, detail = #{detail}
        where id = #{bookId};
    </update>

    <select id="queryBookById" resultMap="bookResultMap">
        select * from books where id = #{bookID};
    </select>

    <select id="queryAllBooks" resultMap="bookResultMap">
        select * from books;
    </select>

    <select id="queryBook" resultMap="bookResultMap">
        select * from books where name like concat('%',#{bookName},'%');
    </select>

    <select id="queryBookByName" resultMap="bookResultMap">
        select * from books where name = #{bookName};
    </select>
</mapper>